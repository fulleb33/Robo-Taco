<script src='https://code.jquery.com/jquery-3.1.0.min.js'></script>

<div class="parallaxCU" id="title" style="min-height: 500px;">

    <h1 id='homeTitle'>Contact Us</h1>

</div>
</div>
<div id="contactPara">
		<div class="a">
		  <h3 id="sendMessage">Send A Message</h3>
		 <form id="contact">
		 	<div class="form-group">
		      <label id="name" for="name">Name:</label>
		      <input type="name" class="form-control" id="nameBox" placeholder="Enter Name" name="name">
		    </div>
		   <div class="form-group">
		      <label id="subject" for="subject">Subject:</label>
		      <input type="subject" class="form-control" id="subjectBox" placeholder="Subject" name="subject">
		    </div>
		   <div class="form-group">
		      <label id="message" for="message">Message:</label>
		      <input type="text" class="form-control" id="messageBox" placeholder="Lets Taco-Bout-it" name="message">
		    </div>
		    <button id="submitBtn" type="submit" class="btn btn-default">Submit</button>
		  </form>
		</div>
	</div>

	<div id="postReviews">
    <h3>Lettuce know what you think</h3>
        <form id="reviewForm">
            <div class="form-group">
              <label style="color: white;" id="reviewname" for="name">Name:</label>
              <input type="reviewname" class="form-control" id="reviewnameBox" placeholder="Enter Name" name="reviewname">
            </div>
               <div class="form-group">
              <label style="color: white;" id="feedback" for="name">Feedback:</label>
              <input type="name" class="form-control" id="feedbackBox" placeholder="Please Leave Us A Review!" name="feedback">
            </div>
            <button id="revSubmitBtn" type="submit" class="btn btn-default">Submit</button>
        </form>
</div>

<script type="text/javascript">

$('#submitBtn').click(function(event) {
	event.preventDefault();
	alert('Email has been sent! Thank you!');
	$.post('/email/' + $('#nameBox').val().trim() + '/' + $('#emailBox').val() + '/' + $('#subjectBox').val() + '/' + $('#messageBox').val(), function() {
	});
	clearFields();
});


</script>

